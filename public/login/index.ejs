<% include ../_partials/head %>
    <title>Log In</title>
  </head>
  <body>
    <% include ../_partials/navbar %>
    <div class="container">
      <h1 class="mt-1">
        Log In
        <a class="btn btn-secondary btn-sm float-right mt-2" href="/signup" role="button">I don't have an account yet</a>
      </h1>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="usernameInput">Username or email:</label>
          <input type="text" name="usernameOrEmail" id="usernameOrEmailInput" placeholder="Username or email..." class="form-control"
          <% if(typeof refill !== "undefined" && typeof refill.usernameOrEmail !== "undefined"){ %>
            value="<%- refill.usernameOrEmail %>"
          <% } %>>

          <% if(typeof errorUsernameOrEmail !== "undefined"){ %>
            <p class="text-danger"><%= errorUsernameOrEmail %></p>
          <% } %>
        </div>
        <div class="form-group">
          <label for="passwordInput">Password:</label>
          <input type="password" name="password" id="passwordInput" placeholder="Password..." class="form-control">
          
          <% if(typeof errorPassword !== "undefined"){ %>
            <p class="text-danger"><%= errorPassword %></p>
          <% } %>
        </div>
        <div class="form-group">
          <input type="checkbox" id="stayLoggedCheckbox" name="stayLogged">
          <label for="stayLoggedCheckbox">
            Stay logged in
          </label>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </div>

    <% include ../_partials/includeScripts %>
  </body>
</html>
