<% include ../_partials/head %>
    <title><%= searchQuery %> - search</title>
  </head>
  <body>
    <% include ../_partials/navbar %>
    <div class="container mt-2">
      <% if(searchResults.length == 0){ %>
        <h2 class="font-weight-light text-center mt-2">No results</h2>
      <% } else {%>
        <div class="row">
          <% searchResults.forEach((result) => { %>
            <div class="card col-12 col-sm-4 mx-auto" style="width: 18rem;">
              <img class="card-img-top" src="" alt="">
              <% if(result.hasProfilePic !== null && result.hasProfilePic){ %>
                <img src="../_data/users/profilePics/<%- result.username %>.jpg" alt="" class="mx-auto" width="150px" height="150px">
              <% } else{ %>
                <img src="../_icons/profilePicPlaceholder.png" alt="" class="mx-auto" width="150px" height="150px">
              <% } %>
              <div class="card-body mx-auto">
                <h5 class="card-title"><%= result.username %></h5>
                <% if(result.bio){ %>
                  <p class="card-text"><span class="font-weight-light">Bio:</span> <%= result.bio %></p>
                <% } else{ %>
                  <p class="card-text font-weight-light">No bio</p>
                <% } %>
                <a href="/account/<%- result.username %>" class="btn btn-primary">See the profile</a>
                <% if(result.followedByCurrentUser){ %>
                  <p class="card-text font-weight-light text-center my-1">Following</p>
                <% } %>
                <% if(result.followsCurrentUser){ %>
                  <p class="card-text font-weight-light text-center my-1">Follows you</p>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
    <% include ../_partials/includeScripts %>
  </body>
</html>
